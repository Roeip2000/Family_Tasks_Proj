<?xml version="1.0" encoding="utf-8"?>
<!-- דשבורד הילד — מציג שם, כוכבים, סיכום משימות, ורשימת משימות.
     זרימה: header (שם + כוכבים) → סיכום (סה"כ / בוצעו / דחופות) → רשימת משימות.
     ChildDashboardActivity.java אחראי על מילוי הנתונים מ-Firebase. -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ===== Header: שם ילד + כוכבים ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- שם הילד -->
            <TextView
                android:id="@+id/tvChildName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="שלום!"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#222" />

            <!-- יתרת כוכבים -->
            <TextView
                android:id="@+id/tvStars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFB300"
                android:drawablePadding="4dp" />

        </LinearLayout>

        <!-- ===== סיכום: סה"כ / בוצעו / דחופות — שלוש קופסאות ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <!-- סה"כ משימות -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#E3F2FD"
                xmlns:app="http://schemas.android.com/apk/res-auto">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">
                    <TextView
                        android:id="@+id/tvTotalTasks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#1565C0" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="משימות"
                        android:textSize="12sp"
                        android:textColor="#555" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- בוצעו -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#E8F5E9"
                xmlns:app="http://schemas.android.com/apk/res-auto">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">
                    <TextView
                        android:id="@+id/tvCompleted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="בוצעו"
                        android:textSize="12sp"
                        android:textColor="#555" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- דחופות -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFF3E0"
                xmlns:app="http://schemas.android.com/apk/res-auto">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">
                    <TextView
                        android:id="@+id/tvDueSoon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#E65100" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="דחופות"
                        android:textSize="12sp"
                        android:textColor="#555" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- ===== כותרת רשימת משימות ===== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="המשימות שלי"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="8dp" />

        <!-- ===== הודעה כשאין משימות ===== -->
        <TextView
            android:id="@+id/tvNoTasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="אין משימות כרגע. ההורה יוסיף בקרוב!"
            android:textSize="14sp"
            android:textColor="#999"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="16dp" />

        <!-- ===== רשימת משימות (RecyclerView) ===== -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <!-- כפתור התנתקות ילד -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="יציאה"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
