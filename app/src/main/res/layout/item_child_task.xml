<?xml version="1.0" encoding="utf-8"?>
<!-- כרטיס משימה ברשימת המשימות של הילד.
     מציג: סטטוס (אייקון), כותרת, זמן שנותר, וכוכבים.
     משמש ב-ChildTaskAdapter עם RecyclerView. -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center_vertical">

        <!-- אייקון סטטוס: עיגול צבעוני (ירוק=בוצע, כתום=דחוף, אפור=רגיל) -->
        <View
            android:id="@+id/viewStatusDot"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@android:drawable/radiobutton_off_background" />

        <!-- תמונת המשימה — מוצגת רק אם יש imageBase64 -->
        <ImageView
            android:id="@+id/imgTaskImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_marginStart="8dp"
            android:contentDescription="תמונת משימה" />

        <!-- חלק טקסטואלי: כותרת + זמן שנותר -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp">

            <!-- כותרת המשימה -->
            <TextView
                android:id="@+id/tvTaskTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="שם המשימה"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- זמן שנותר / תאריך יעד -->
            <TextView
                android:id="@+id/tvDueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="היום"
                android:textSize="13sp"
                android:textColor="#888"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- כוכבים שאפשר להרוויח -->
        <TextView
            android:id="@+id/tvTaskStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FFB300"
            android:textStyle="bold" />

        <!-- כפתור סימון "בוצע" — מאפשר לילד לסמן שהשלים את המשימה -->
        <Button
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:text="בוצע ✓"
            android:textSize="12sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:minWidth="0dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
